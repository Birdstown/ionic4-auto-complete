{
  "name": "ionic4-auto-complete",
  "version": "2.0.0",
  "scripts": {
    "publish": "npm publish dist",
    "build": "ng-packagr -p package.json && cp -fr src/scss/auto-complete.scss dist/auto-complete.scss",
    "docs": "npm run docs:build",
    "docs:build": "compodoc -p tsconfig.json -n ionic4-auto-complete -d docs --hideGenerator",
    "docs:serve": "npm run docs:build -- -s",
    "docs:watch": "npm run docs:build -- -s -w",
    "lint": "tslint --type-check --project tsconfig.json src/**/*.ts",
    "test": "tsc && karma start"
  },
  "ngPackage": {
    "lib": {
      "cssUrl": "inline",
      "entryFile": "src/index.ts",
      "styleIncludePaths": ["./src/scss"]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrquick17/ionic4-auto-complete"
  },
  "author": {
    "name": "Jeremy Quick",
    "email": "me@jrquick.com"
  },
  "keywords": [
    "angular"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jrquick17/ionic4-auto-complete/issues"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.803.1",
    "@angular-devkit/build-angular": "^0.803.1",
    "@angular-devkit/core": "^8.3.1",
    "@angular-devkit/schematics": "^8.3.1",
    "@angular/cli": "^8.3.1",
    "@angular/compiler": "^8.2.4",
    "@angular/compiler-cli": "^8.2.4",
    "@angular/language-service": "^8.2.4",
    "@compodoc/compodoc": "^1.1.10",
    "@ionic-native/core": "5.12.0",
    "@ionic/angular": "^4.8.1",
    "@ionic/angular-toolkit": "^2.0.0",
    "@ionic/app-scripts": "3.2.4",
    "@ionic/cli-plugin-cordova": "1.6.2",
    "@ionic/cli-plugin-ionic-angular": "1.4.1",
    "@ionic/pro": "2.0.4",
    "@ionic/storage": "2.2.0",
    "@types/jasmine": "3.4.0",
    "@types/node": "^12.7.2",
    "codelyzer": "~5.1.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-cli": "~2.0.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "ng-packagr": "^5.5.0",
    "protractor": "~5.4.2",
    "rxjs": "6.5.2",
    "sw-toolbox": "3.6.0",
    "ts-node": "~8.3.0",
    "tsickle": "^0.37.0",
    "tslint": "~5.19.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.3"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "peerDependencies": {
    "@angular/animations": "^8.2.4",
    "@angular/cdk": "^8.1.4",
    "@angular/common": "^8.2.4",
    "@angular/core": "^8.2.4",
    "@angular/forms": "^8.2.4",
    "@angular/platform-browser": "^8.2.4",
    "@angular/platform-browser-dynamic": "^8.2.4",
    "@angular/router": "^8.2.4",
    "@angular/service-worker": "^8.2.4",
    "cordova-plugin-ionic": "^5.4.4",
    "core-js": "^3.2.1",
    "ionicons": "^4.6.3",
    "zone.js": "^0.9.1"
  }
}
